@import "normalize"
@import "classes"
@import "animation"

@font-face
	font-family Geometry
	src url('../fonts/Geometry.eot')
	src url('../fonts/Geometry.eot?#iefix') format('embedded-opentype'), url('../fonts/Geometry.woff') format('woff'), url('../fonts/Geometry.ttf') format('truetype'), url('../fonts/Geometry.svg#GeometrySoftProBoldN') format('svg')
	font-weight normal
	font-style normal


//body
h1
	font-size 30px

#wrapper
	margin 0 auto
	width 916px
	height auto

#nav
	font-size 1em
	width 200px

	ul
		list-style none
		marign 0
		padding 0
	a
		color #4682b4
		text-decoration none

		&:hover
			color #111
			text-decoration none

.form
	margin 80px auto
	font-family Geometry
	background rgba(255,255,255,0.68)
	width 500px
	height auto
	padding 5px
	box-shadow 0px 0px 10px #6f6749
	border-radius 10px

	& h1, label
		width 250px
		margin 10px
		padding 5px

	& h4
		width auto
		margin 10px
		padding 5px
	
	& a
		margin-left 10px

.input
	width 450px
	margin 10px
	padding 5px
	border-radius 6px
	border 1px solid #86c9ef

	&:focus
		border-color #339933

	&.invalid
		border-color: #ff0000

.inputD
	width 450px

.selectionDate
	width 115px
	margin 10px
	padding 5px
	border-radius 6px
	border 1px solid #86c9ef
	background #FFF

	&:focus
		border-color #339933

	&.invalid
		border-color: #ff0000

.selection
	width 460px
	margin 10px
	padding 5px
	border-radius 6px
	border 1px solid #86c9ef
	background #FFF
	
.button 
	
	position relative
	left 370px
	bottom 30px
	width 100px
	height 25px
	border-radius 6px
	font-family Geometry
	background #FFF
	border 1px solid #86c9ef
	&:hover
		transition opacity 1s
		border 1px solid #6f6749

#airplane
	position relative
	top 90px
	left 70px
	background url(../images/airplane.gif)
	opacity 0.8
	height 81px
	width 158px

	&:hover
		opacity 0.2
		transition opacity 1s


//footer
